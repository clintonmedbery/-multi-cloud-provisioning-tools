{
  "name": "multi-cloud-provisioning-tools",
  "version": "0.2.2",
  "description": "This library aims to provide data on infrastructure across multiple cloud providers. Currently, it supports Azure and vSphere.",
  "keywords": [
    "azure",
    "vsphere",
    "cloud",
    "infrastructure"
  ],
  "license": "MIT",
  "author": "Clinton Medbery <clintomed@gmail.com>",
  "exports": {
    ".": {
      "types": "./dist/types",
      "import": "./dist/index.es.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "browser": "./dist/index.umd.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && npm run build:js",
    "dev": "rollup -c -w",
    "build:js": "rollup -c",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@azure/identity": "3.1.3",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@azure/arm-compute": "20.0.0",
    "@azure/arm-subscriptions": "5.1.0",
    "@babel/core": "7.18.2",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "11.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/lodash": "4.14.182",
    "@types/node-fetch": "2.6.3",
    "husky": "8.0.0",
    "lint-staged": "12.4.2",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rollup": "2.74.1",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-polyfills": "0.2.1",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "19.0.3",
    "typescript": "4.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
